@model Projeto.Presentation.Mvc.Models.VendedorModels.VendedorCadastroModel

@{
    ViewData["Title"] = "LoguinVendedor";
    Layout = "~/Views/Shared/LayoutBase.cshtml";
}



@using (Html.BeginForm())
{
    <div class="container mt-3">
        <h2>Preencha os Campos para entrar como Vendedor</h2>

        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@TempData["MensagemSucesso"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@TempData["MensagemErro"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <label>Informe o Email:</label>
        @Html.TextBoxFor(model => model.Email, new
    {
       @class = "form-control col-md-4",
       @placeholder = "Digite Aqui"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Email)
        </span>
        <br />
        <label>Senha:</label>
        @Html.PasswordFor(model => model.Senha, new
    {
       @class = "form-control col-md-4",
       @placeholder = "Digite Aqui"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Senha)
        </span>
        <br />

        <br />
        <input type="submit" value="Entrar"
               class="btn btn-success btn-sm" />
    </div>
}