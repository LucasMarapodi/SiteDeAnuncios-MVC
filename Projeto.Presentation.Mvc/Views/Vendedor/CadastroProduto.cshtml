@model Projeto.Presentation.Mvc.Models.ProdutoModels.ProdutoCadastroModel

@{
    ViewData["Title"] = "CadastroProduto";
    Layout = "~/Views/Shared/LayoutVendedor.cshtml";
}


@using (Html.BeginForm())
{
    <div class="container mt-3">

        <h2>Preencha os campos para Anunciar um Produto :</h2>


        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>@TempData["MensagemSucesso"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>@TempData["MensagemErro"]</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }



        <label>Nome do Produto:</label>
        @Html.TextBoxFor(model => model.Nome, new
    {
        @class = "form-control col-md-4",
        @placeholder = "Digite Aqui"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Nome)
        </span>
        <br />
        <label>Preço :</label>
        @Html.TextBoxFor(model => model.Preco, new
    {
        @class = "form-control col-md-4",
        @placeholder = "ex : 50,00"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Preco)
        </span>
        <br />
        <label>Categoria:</label>
        @Html.TextBoxFor(model => model.Categoria, new
    {
        @class = "form-control col-md-4",
        @placeholder = "Digite Aqui"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Categoria)
        </span>
        <br />

        <label>Uma breve Descrição sobre o Produto :</label>
        @Html.TextBoxFor(model => model.Descricao, new
    {
        @class = "form-control col-md-4",
        @placeholder = "Digite Aqui"
    })
        <span class="text-danger">
            @Html.ValidationMessageFor(model => model.Descricao)
        </span>
        <br />
        <br />
        <input type="submit" value="Anunciar o Produto"
               class="btn btn-success btn-sm" />
    </div>
}

